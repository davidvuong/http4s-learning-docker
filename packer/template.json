{
  "variables": {
    "home": "{{env `HOME`}}",
    "registry_email": "{{env `DOCKER_EMAIL`}}",
    "registry_password": "{{env `DOCKER_PASSWORD`}}"
  },
  "builders": [{
    "type": "docker",
    "image": "imageintelligence/scala",
    "export_path": "image.tar"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "{{pwd}}/",
      "destination": "/root/app"
    },
    {
      "type": "shell",
      "inline": [
        "cd /root/app",
        "sbt compile"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "imageintelligence/http4sbin-learning-docker",
        "login": true,
        "login_email": "{{user `registry_email`}}",
        "login_password": "{{user `registry_password`}}"
      },
      "docker-push"
    ]
  ]
}
